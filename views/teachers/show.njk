{% extends 'layout.njk' %}

{% block content %}
    <div class="card">
        <section class="avatar-url" style="background: url({{teacher.avatar_url}}) no-repeat center center / cover"></section>
        <section class="details">
            <h3>Detalhes</h3>
            <div class="item">
                <div>Professor</div>
                <div>{{teacher.name}}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{teacher.birth}}</div>
            </div>

            <div class="item">
                <div>Escolaridade</div>
                <div>{{teacher.formations}}</div>
            </div>

            <div class="item">
                <div>Tipo de Aula</div>
                <div>

                    <span>{{"Presencial" if teacher.classes == "P" else "Distância"}}</span>

                </div>
            </div>

            <div class="item">
                <div>Area de atuação</div>
                <div>
                    {% for service in teacher.services %}
                        <span>{{service}}</span>
                    {% endfor %}

                </div>
            </div>

            <div class="item">
                <div>Desde</div>
                <div>{{teacher.created_at}}</div>
            </div>
            <a href="#" class="edit">Editar</a>
        </section>
    </div>

{% endblock content %}