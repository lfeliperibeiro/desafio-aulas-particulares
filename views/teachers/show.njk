{% extends 'layout.njk' %}

{% block content %}
    <div class="card">
        <section class="avatar-url" style="background: url(https://source.unsplash.com/collection/8360382/500x500) no-repeat center center / cover"></section>
        <section class="details">
            <h3>Detalhes</h3>
            <div class="item">
                <div>Professor</div>
                <div>{{teacher.name}}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{teacher.birth}}</div>
            </div>

            <div class="item">
                <div>Escolaridade</div>
                <div>Doutorado</div>
            </div>

            <div class="item">
                <div>Tipo de Aula</div>
                <div>
                    {% for classe in teacher.classes %}
                    <span>{{classe}}</span>
                    {% endfor %}
                    
                </div>
            </div>

            <div class="item">
                <div>Desde</div>
                <div>{{teacher.created_at}}</div>
            </div>
        </section>
    </div>

{% endblock content %}