<div class="item">
    <div>Avatar url</div>
    <div>
        <input type="text" name="avatar_url" placeholder="http://" value="{{teacher.avatar_url}}">
    </div>
</div>

<div class="item">
    <div>Nome Completo</div>
    <div>
        <input type="text" name="name" placeholder="Insira seu nome" value="{{teacher.name}}">
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input type="date" name="birth" value="{{teacher.birth}}">
    </div>
</div>

<div class="item">
    <div>Grau de Escolaridade</div>
    <div>
        <select name="formations" value="{{teacher.formations}}">
            <option value="Ensino médio Completo">Ensino médio</option>
            <option value="Ensino Superior Completo">Ensino superior</option>
            <option value="Mestrado">Mestrado</option>
            <option value="Doutorado">Doutorado</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Tipo de Aula</div>
    <div>

        <span>
            <input type="radio" name="classes" value="P" {% if teacher.classes == "P" %} checked="checked" {% endif %}>Presencial
        </span>
        <span>
            <input type="radio" name="classes" value="D" {% if teacher.classes == "D" %} checked="checked" {% endif %}>Distância
        </span>
    </div>
</div>

<div class="item">
    <div>Area de atuação</div>
    <div>
        <input type="text" name="services" placeholder="Insira entre vírgulas suas áreas de atuações" value="{{teacher.services}}">
    </div>
</div>
<button type="submit">Salvar</button>