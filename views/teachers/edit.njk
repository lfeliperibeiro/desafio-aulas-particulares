{% extends 'layout.njk' %}

{% block content %}
    <div class="card">
        <section class="avatar-url" style="background: url({{teacher.avatar_url}}) no-repeat center center / cover"></section>
        <section class="details">
            <h3>Editar Professor</h3>
            <form method="POST" action="/teachers?_method=PUT">
                <input type="hidden" name="id" value="{{teacher.id}}">

                {% include 'teachers/fields.njk' %}

            </form>
            <form id="form-delete" action="/teachers?_method=DELETE" method="post">
                <input type="hidden" name="id" value="{{teacher.id}}">
                <button id="delete-button" type="submit">Delete</button>
            </form>
        </section>
    </div>
    {% include '../confirm.njk' %}
{% endblock content %}