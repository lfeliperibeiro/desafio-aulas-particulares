{% extends 'layout.njk' %}

{% block content %}
    <form class="card" method="POST" action="/teachers">
        <section class="avatar-url" style="background: url(https://source.unsplash.com/collection/8360382/500x500) no-repeat center center / cover"></section>
        <section class="details">
            <h3>Detalhes</h3>
            
            <div class="item">
                <div>Avatar url</div>
                <div>
                    <input type="text" name="avatar_url" placeholder="http://">
                </div>
            </div>

            <div class="item">
                <div>Nome Completo</div>
                <div>
                    <input type="text" name="name" placeholder="Insira seu nome">
                </div>
            </div>

            <div class="item">
                <div>Data de nascimento</div>
                <div>
                    <input type="date" name="birth">
                </div>
            </div>

            <div class="item">
                <div>Grau de Escolaridade</div>
                <div>
                    <select name="formation">
                        <option value="ensino-medio">Ensino médio</option>
                        <option value="ensino-superior">Ensino superior</option>
                        <option value="ensino-mestrado">Mestrado</option>
                        <option value="ensino-doutorado">Doutorado</option>
                    </select>
                </div>
            </div>

            <div class="item">
                <div>Tipo de Aula</div>
                <div>
                    
                    <span>
                        <input type="radio" name="classes" value="P">Presencial
                    </span>
                    <span>
                        <input type="radio" name="classes" value="D">Distância
                    </span>
                </div>
            </div>

            <div class="item">
                <div>Area de atuação</div>
                <div>
                    <input type="text" name="services" placeholder="Insira entre vírgulas suas áreas de atuações">
                </div>
            </div>
            <button type="submit">Cadastrar</button>
        </section>
    </form>

{% endblock content %}