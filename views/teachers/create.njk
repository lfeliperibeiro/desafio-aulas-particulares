{% extends 'layout.njk' %}

{% block content %}
    <form class="card" method="POST" action="/teachers">
        <section class="image" style="border-radius: 8px 0 0 8px; background:url(https://source.unsplash.com/collection/8360382/500x500) no-repeat center center /cover"></section>
        <section class="details">
            <h3>Novo Professor</h3>

            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input type="url" name="avatar_url" placeholder="http://">
                </div>
            </div>
            <div class="item">
                <div>Professor</div>
                <div>
                    <input type="text" name="name" placeholder="Nome completo">
                </div>
            </div>
            <div class="item">
                <div>Data de nascimento</div>
                <div>
                    <input type="date" name="birth">
                </div>
            </div>
            <div class="item">
                <div>Grau de escolaridade</div>
                <div>
                    <select name="grau">
                        <option value="medio">Ensino Médio Completo</option>
                        <option value="superior">Ensino Superior Completo</option>
                        <option value="mestrado">Mestrado</option>
                        <option value="doutorado">Doutorado</option>
                    </select>
                </div>
            </div>
            <div class="item">
                <div>Tipo de Aula</div>
                <div>
                    <span><input type="radio" name="classe" value="P">Presencial</span>
                    <span><input type="radio" name="classe" value="D">Distância</span>
                </div>
            </div>

            <div class="item">
                <div>Area de atuação</div>
                <div>
                    <input type="text" name="atuaction" placeholder="Insira suas áreas de atuação entre vírgulas">
                </div>
            </div>

            <button type="submit">Salvar</button>

        </section>
    </form>

{% endblock content %}