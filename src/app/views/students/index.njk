{% extends 'layout.njk' %}

{% block content %}
    <div class="card table-content">
         <div class="header">
            <a href="/students/create">Novo</a>
            <form action="/students" method="GET">
                <input type="text" name="filter" placeholder="Nome ou Email" value="{{filter}}">
                <button class="filter-button" type="submit">Filtrar</button>
            </form>
        </div>
        
        <table width="100%">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Ano Escolar</th>
                    <th>Carga Horária</th>
                    <th>Email</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for student in students %}
                    <tr>
                        <td>
                            <span style="background-image: url({{student.avatar_url}})"></span>
                            {{student.name}}</td>
                        <td>{{student.formations}}</td>
                        <td>{{student.grade}}hrs</td>
                        <td>{{student.email}}</td>
                        <td>
                            <a href="/students/{{student.id}}">ver</a>
                        </td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>
        <div class="pagination" data-page={{pagination.page}} data-total={{pagination.total}} data-filter={{filter}}></div>
    </div>

{% endblock content %}