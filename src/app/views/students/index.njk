{% extends 'layout.njk' %}

{% block content %}
    <div class="card table-content">
        <a href="/students/create">Novo</a>
        <table width="100%">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Ano Escolar</th>
                    <th>Carga Horária</th>
                    <th>Email</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for student in students %}
                    <tr>
                        <td>
                            <span style="background-image: url({{student.avatar_url}})"></span>
                            {{student.name}}</td>
                        <td>{{student.formations}}</td>
                        <td>{{student.grade}}hrs</td>
                        <td>{{student.email}}</td>
                        <td>
                            <a href="/students/{{student.id}}">ver</a>
                        </td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>

{% endblock content %}