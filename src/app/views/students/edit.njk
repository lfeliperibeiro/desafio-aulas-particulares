{% extends 'layout.njk' %}

{% block content %}
    <div class="card">
        <section class="avatar-url" style="background: url({{student.avatar_url}}) no-repeat center center / cover"></section>
        <section class="details">
            <h3>Editar Aluno</h3>
            <form method="POST" action="/students?_method=PUT">

                {% include 'students/fields.njk' %}
                <input type="hidden" name="id" value="{{student.id}}">

            </form>
            <form id="form-delete" action="/students?_method=DELETE" method="post">
                <input type="hidden" name="id" value="{{student.id}}">
                <button id="delete-button" type="submit">Delete</button>
            </form>
        </section>
    </div>
    <script src="/confirm.js"></script>
    
{% endblock content %}