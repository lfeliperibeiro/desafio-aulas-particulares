{% extends 'layout.njk' %}

{% block content %}
    <div class="card table-content">
        <div class="header">
        <a href="/teachers/create">Novo</a>
        <form action="/teachers" method="GET">
        <input type="text" name="filter" placeholder="Nome ou Aula" value="{{filter}}">
        <button class="filter-button" type="submit">Filtrar</button>
        </form>
        </div>
        <table width="100%">
            <thead>
                <tr>
                    <th>Professor</th>
                    <th>Acompanhamentos</th>
                    <th>Alunos</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for teacher in teachers %}
                    <tr>
                        <td>
                            <span style="background-image: url({{teacher.avatar_url}})"></span>
                            {{teacher.name}}</td>
                        <td>{{teacher.services}}</td>
                        <td>{{teacher.total_students}}</td>
                        <td>
                            <a href="/teachers/{{teacher.id}}">ver</a>
                        </td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>

{% endblock content %}